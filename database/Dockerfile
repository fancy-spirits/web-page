FROM postgres
# For postgres
ENV POSTGRES_DB ${POSTGRES_DB}
ENV POSTGRES_USER ${POSTGRES_ADMIN_USER}
ENV POSTGRES_PASSWORD ${POSTGRES_ADMIN_PASSWORD}
# For custom
ENV POSTGRES_ADMIN_USER ${POSTGRES_ADMIN_USER}
ENV POSTGRES_ADMIN_PASSWORD ${POSTGRES_ADMIN_PASSWORD}
ENV POSTGRES_FANCY_SPIRITS_USER ${POSTGRES_FANCY_SPIRITS_USER}
ENV POSTGRES_FANCY_SPIRITS_PASSWORD ${POSTGRES_FANCY_SPIRITS_PASSWORD} 

COPY 1-init-users.sh /docker-entrypoint-initdb.d/
COPY 2-schema.sql /docker-entrypoint-initdb.d/